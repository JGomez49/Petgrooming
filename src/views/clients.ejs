
    <%- include ("partials/head") %>

    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/darkly.css">

    <%- include ("partials/navigation") %>

<body>

    <div class="main">  

        <div class="container">

            <div class="row">
                
                <div id="liveAlertPlaceholder"></div>

                        <% imagesMirelleDog.forEach(function (image) { %>

                            <% if (image._id == clientid) { %> 
                                
                                <div class="row">
                                    <div class="col">
                                        <div class="card border-primary animate__animated animate__rubberBand m-2" style="max-width: 18rem;" >
                                            <div class="card-header"><%= image.title %></div>
                                            <img src="<%= image.path %>" class="img-fluid rounded-start my-1" alt="..." onclick="window.open('<%= image.path %>')";>
                                            <a href="/image/<%= image._id %>/remove" class="btn btn-danger d-md-block mb-1 mt-auto">Close File</a>
                                            <a href="/image/<%= image._id %>/dentalupload" class="btn btn-success d-md-block mb-1 mt-auto">Upload Pics</a>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <table class="table table-dark table-striped">
                                            <tr>
                                                <th scope="row">Created Date: </th>
                                                <td> <%= image.Created_at %> </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Name: </th>
                                                <td><%= image.title %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">ID: </th>
                                                <td><%= image._id %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Kin Name: </th>
                                                <td><%= image.kin_name %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Phone: </th>
                                                <td><%= image.phone %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Email: </th>
                                                <td><%= image.email %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">How know the program: </th>
                                                <td><%= image.how %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Breed: </th>
                                                <td><%= image.breed %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Age: </th>
                                                <td><%= image.age %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Gender: </th>
                                                <td><%= image.gender %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Diet: </th>
                                                <td><%= image.diet %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Health Condition(s): </th>
                                                <td><%= image.health %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Prev. Cleaning with Anesthesia: </th>
                                                <td><%= image.withanest %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Prev. Cleaning without Anesthesia: </th>
                                                <td><%= image.noanest %></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                            <% } %>

                        <% }) %>

                <table class="table table-bordered border-primary table-dark table-striped">

                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Node</th>
                            <th scope="col">Comments</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% imagesMirelleDog.forEach(function (image) { %>
                            <% if (image.precio == clientid) { %>
                                <tr>
                                    <th scope="row"> <%= image.fecha_upload %>  </button></th>
                                    <td> 
                                        <img 
                                            src="<%= image.path %>"
                                            class="img-fluid rounded-start my-1" 
                                            alt="..." 
                                            style="max-width: 20rem;"
                                            onclick="window.open('<%= image.path %>')";
                                        > 
                                    </td> 
                                    <td> <%= image.comments %> </td>
                                    <td> <a href="/image/<%= image._id %>/delete" class="btn btn-danger d-md-block mb-1 mt-auto" >Delete</a> </td>
                                </tr>
                            <% } %>
                        <% }) %>
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</body>
<%- include ("partials/footer") %>
</html>